
@model List<Data.Models.tbRestaurantSchedule>;
@{
    var index = 0;

}
@if(Model.Count > 0)
{
    <div class="d-flex flex-row flex-wrap gap-3">
        @foreach (var schedule in Model)
        {
            index++;

            DateTime startTime = DateTime.Today.Add(schedule.StartTime);
            string formattedStartTime = startTime.ToString("hh:mm tt");

            DateTime endTime = DateTime.Today.Add(schedule.EndTime);
            string formattedEndTime = endTime.ToString("hh:mm tt");

            <div class="">
                <!-- Form Radio -->
                <label class="form-control" for="schedule_@schedule.Id">
                    <span class="form-check">
                        <input type="radio" class="form-check-input" id="schedule_@schedule.Id" name="time" data-id="@schedule.Id" onclick="ShowAvailableCount()" @(index == 1 ? "checked" : "")>
                        <span class="form-check-label" id="span_schedule_@schedule.Id">@formattedStartTime- @formattedEndTime</span>
                    </span>
                </label>
                <!-- End Form Radio -->
            </div>
        }

    </div>
}
