@{
    var cusId = ViewBag.cusId;
    var resId = ViewBag.resId;
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "reviewForm" }))
{

    <div class="mb-4">
        <h3>Your Review</h3>
        <form>
            <div class="mb-3">
                <label class="form-label" for="exampleFormControlTextarea1">Give a rating</label>
                <div class="row">
                    <div class="col-sm mb-2">
                        <!-- Form Radio -->
                        <label class="form-control" for="rating1">
                            <span class="form-check">
                                <input type="radio" class="form-check-input" name="Rating" id="rating1" value="1">
                                <span class="form-check-label">Bad</span>
                            </span>
                        </label>
                        <!-- End Form Radio -->
                    </div>

                    <div class="col-sm mb-2">
                        <!-- Form Radio -->
                        <label class="form-control" for="rating2">
                            <span class="form-check">
                                <input type="radio" class="form-check-input" name="Rating" id="rating2" value="2">
                                <span class="form-check-label">Fair</span>
                            </span>
                        </label>
                        <!-- End Form Radio -->
                    </div>

                    <div class="col-sm mb-2">
                        <!-- Form Radio -->
                        <label class="form-control" for="rating3">
                            <span class="form-check">
                                <input type="radio" class="form-check-input" name="Rating" id="rating3" value="3">
                                <span class="form-check-label">Regular</span>
                            </span>
                        </label>
                        <!-- End Form Radio -->
                    </div>
                    <div class="col-sm mb-2">
                        <!-- Form Radio -->
                        <label class="form-control" for="rating4">
                            <span class="form-check">
                                <input type="radio" class="form-check-input" name="Rating" id="rating4" value="4">
                                <span class="form-check-label">Good</span>
                            </span>
                        </label>
                        <!-- End Form Radio -->
                    </div>
                    <div class="col-sm mb-2">
                        <!-- Form Radio -->
                        <label class="form-control" for="rating5">
                            <span class="form-check">
                                <input type="radio" class="form-check-input" name="Rating" id="rating5" value="5">
                                <span class="form-check-label">Best</span>
                            </span>
                        </label>
                        <!-- End Form Radio -->
                    </div>
                </div>
                <!-- End Row -->

                <label class="form-label" for="txt-review">Write a review</label>
                <textarea id="txt-review" class="form-control" placeholder="Review about the restaurant" rows="4" name="Review"></textarea>
            </div>
            <input type="hidden" name="CustomerId" value="@cusId">
            <input type="hidden" name="RestaurantId" value="@resId">

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
            
        </form>
    </div>
}

