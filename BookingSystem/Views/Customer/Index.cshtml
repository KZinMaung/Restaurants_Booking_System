                        <span class="card-link"><i class="bi-people small me-2"></i>14 seats available </span>
                    </div>
                </a>
                <!-- End Card -->
            </div>
            <!-- End Col -->
        </div>
        <!-- End Row -->

    </div>
    <!-- End Card Grid -->
</div>

