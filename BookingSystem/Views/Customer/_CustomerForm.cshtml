        </div>
        </div> *@

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

            <input type="hidden" name="Id" value="@Model.Id">
            <input type="hidden" name="Photo" value="@Model.Photo">
            <input type="hidden" name="PhotoString" value="@Model.PhotoString">
            <input type="hidden" name="CreatedAt" value="@Model.CreatedAt">
            <input type="hidden" name="Accesstime" value="@Model.Accesstime">
            <input type="hidden" name="IsDeleted" value="@Model.IsDeleted">
            <input type="hidden" name="Password" value="@Model.Password">

        </form>
    </div>

}


