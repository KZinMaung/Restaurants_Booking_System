@model Infra.Services.PagedListClient<Data.ViewModels.BookingVM>
@using X.PagedList.Mvc.Core

@if (Model.Results.TotalItemCount > 0)
{
    <div>
        @foreach (var item in Model.Results)
        {
            var res = item.Restaurant;
            var booking = item.Booking;
            var schedule = item.Schedule;

            <div class="d-flex align-items-center border p-3 gap-3 rounded mb-3">
                <div class="restaurant-photo">
                    <img class="img-fluid" src="@res.ProfilePhotoUrl" alt="Image" />
                </div>
                <div class="d-flex flex-column gap-2 w-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>@res.Name</h4>
                        @* <span class="badge bg-soft-secondary text-secondary">Finished</span> *@
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-row gap-3">
                            <span class="badge bg-soft-primary text-primary">@booking.BookingDate</span>
                            <span class="badge bg-soft-primary text-primary">@schedule.StartTime - @schedule.EndTime</span>
                            <span class="badge bg-soft-primary text-primary">@booking.NoOfTable table(s)</span>
                        </div>
                        <div class="d-flex gap-3">
                            <span>@booking.CustomerName</span>
                            <span>@booking.CustomerEmail</span>
                            <span>@booking.CustomerPhone</span>
                        </div>
                    </div>

                </div>
            </div>
        }
        <div class="row mt-35">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="pagination-bx text-center">
                    @Html.PagedListPager(Model.Results, page => Url.Action("GetList", "Booking",
                             new { page }), X.PagedList.Mvc.Core.PagedListRenderOptions.ClassicPlusFirstAndLast)

                </div>
            </div>

        </div>


    </div>
    
}
    
   

