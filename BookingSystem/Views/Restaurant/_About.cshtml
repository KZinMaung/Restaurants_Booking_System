@model Data.Models.tbRestaurant
@{
    DateTime openTime = DateTime.Today.Add(Model.OpenTime);
    string formattedOpenTime = openTime.ToString("hh:mm tt");

    DateTime closeTime = DateTime.Today.Add(Model.CloseTime);
    string formattedCloseTime = closeTime.ToString("hh:mm tt");
}
<div id="div_about">
    <h4>Address</h4>
    <p>@Model.Location</p>
    <h4>Phone</h4>
    <p>@Model.Phone</p>
    <h4>Opening Time</h4>
    <p>@formattedOpenTime - @formattedCloseTime</p>
    @if (!String.IsNullOrEmpty(Model.Description))
    {
        <h4>About</h4>
        <p>@Model.Description</p>
    }
    
</div>