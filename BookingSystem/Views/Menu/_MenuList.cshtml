@model Infra.Services.PagedListClient<Data.Models.tbMenu>
@using X.PagedList.Mvc.Core
@{
 
}

@if (Model.Results.TotalItemCount > 0)
{
    foreach (var item in Model.Results)
    {
        <div class="d-flex flex-row justify-content-between align-items-center mb-3" id="div_menu_@item.Id">
            <div class="d-flex flex-row align-items-center">
                <span class="avatar avatar-lg avatar-4x3 me-3">
                    <img class="avatar-img" src="@item.PhotoUrl" alt="Image Description">
                </span>
                <h5>@item.Name</h5>
            </div>
            <div class="d-flex align-items-center">
                <p class="m-0">@item.Price MMK</p>
                <div class="div-actions">
                    <button type="button" class="btn btn-outline-primary btn-sm btn-icon rounded-pill mx-2" data-ID="@item.Id" onclick="EditMenu(this)">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-icon btn-sm rounded-pill" data-ID="@item.Id" onclick="Delete(this)">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                
            </div>
        </div>
    }

    <div class="row mt-35">
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="pagination-bx text-center">
                @Html.PagedListPager(Model.Results, page => Url.Action("GetList", "Menu",
                         new { page }), X.PagedList.Mvc.Core.PagedListRenderOptions.ClassicPlusFirstAndLast)

            </div>
        </div>

    </div>
}
else
{
    <div class="" style="padding:3rem">
        <div class="d-flex align-items-center">
            <div style="width: 50%">
                <div class="text-not-found">No Menu found.</div>
                <div>While no menu exits yet, you can create a new one by using the provided button.</div>
            </div>
            <img src="~/assets/svg images/not_found.svg" />
        </div>
    </div>
}